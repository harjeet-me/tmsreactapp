                <constraints nullable="true" />
            </column>
            <column name="mc" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="tax_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="company_logo" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="company_logo_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="customer_since" type="date">
                <constraints nullable="true" />
            </column>
            <column name="notes" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="contract" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="contract_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="preffred_currency" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="payterms" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="time_zone" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="last_modified_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="last_modified_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="customer" columnName="preferred_contact_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="customer" columnName="time_zone" columnDataType="datetime"/>
        <dropDefaultValue tableName="customer" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="customer" columnName="last_modified_date" columnDataType="datetime"/>
    </changeSet>

    <changeSet id="20201101060901-1-relations" author="jhipster">

        <createTable tableName="customer_charge">
            <column name="charge_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="customer_id, charge_id" tableName="customer_charge"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
